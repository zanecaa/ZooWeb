@page
@model ZooWeb.Pages.TicketFinder.ReportModel
@{
}

<br>
<h2>Enter your phone number, first name, and last name to retrieve your ticket</h2>
<br>

@if (Model.errorMsg.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMsg</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Phone Number</label>
        <div class="col-sm-6">
            <input class="form-control" type="tel" name="Visitor.PhoneNumber" placeholder="5551231234" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" maxlength="10" title="Ten digits code" required />
            <label style="font-size:9px;padding-left:20px"> Eg: 5551231234</label>
        </div>
    </div> 
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">First Name</label>
        <div class="col-sm-6">
            <input class="form-control" data-val="true" data-val-required="First name is required" name="Visitor.FirstName" type="text" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Last Name</label>
        <div class="col-sm-6">
            <input class="form-control" data-val="true" data-val-required="Last name is required" name="Visitor.LastName" type="text" value="" />
        </div>
    </div>

    @if (Model.successMsg.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMsg</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Index" role="button">Cancel</a>
        </div>
    </div>

    <br></br>

    @if (Model.listVisitors.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ReceiptNumber</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>TicketID</th>
                    <th>PassType</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListTicketSales)
                {
                    <tr>
                        <td>@item.ReceiptNumber</td>
                        <td>@item.Date</td>
                        <td>@item.Total</td>
                        <td>@item.TicketID</td>
                        <td>@item.PassType</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</form> 