@page
@model ZooWeb.Pages.ZooUsers.EditModel
@{
}

<br>
<h2>Edit User</h2>
<br>

@if (Model.errorMsg.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMsg</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<form method="POST">
    <div class="row mb-3">
        <div class="col-sm-6">
            <input type="hidden" class="form-control" name="UserId" value="@Model.info.UserId">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Username</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Username" value="@Model.info.Username">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Password</label>
        <div class="col-sm-6">
            <input type="password" class="form-control" name="Password" value="">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Role</label>
        <div class="col-sm-6">
            <select name="Role" value="@Model.info.UserRole">
                <option value="">-</option>
                @foreach (RoleListTable item in Model.userRoleList)
                {
                    if (item.Key == Model.info.UserRole)
                    {
                        <option value="@(item.Key)" selected="selected">@item.Display</option>
                    }
                    else
                    {
                        <option value="@(item.Key)">@item.Display</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Account Status</label>
        <div class="col-sm-6">
            <select name="Status" value="@Model.info.IsActive">
                @foreach (string item in new List<string>{ "enabled", "disabled" })
                    {
                    if (item == Model.info.IsActive)
                    {
                        <option value="@(item)" selected="selected">@item</option>
                    }
                    else
                    {
                        <option value="@(item)">@item</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Creation Date</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="CreationDate" value="@Model.info.CreationDate" disabled>
        </div>
    </div>

    @if (Model.successMsg.Length > 0)
	{
    <div class="row mb-3">
        <div class="col-sm-9">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMsg</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
	}

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/ZooUsers/Index" role="button">Cancel</a>
        </div>
    </div>
</form>