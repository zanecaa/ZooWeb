@page
@model LoginModel

<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
</head>
<body>
    @{
        Layout = null;
    }
    <h1>Login</h1>
    <form method="post">
        <label for="username">Username:</label>
        <input asp-for="Username" required><br><br>
        <label for="password">Password:</label>
        <input asp-for="Password" type="password" required><br><br>
        <input type="submit" value="Login">
    </form>
    <p>
        <a href="/Visitors/Report">Continue as a Guest</a>
    </p>
</body>
</html>