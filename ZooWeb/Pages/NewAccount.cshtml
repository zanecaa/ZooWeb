@page
@model ZooWeb.Pages.NewAccountModel
@{
}

<br>
<h2>New User</h2>
<br>

@if (Model.errorMsg.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMsg</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<form method="POST">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Username</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Username" value="@Model.info.Username">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Password</label>
		<div class="col-sm-6">
			<input type="password" class="form-control" name="Password" value="@Model.info.PasswordHash">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">First Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Fname" value="@Model.info.Fname">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Last Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Lname" value="@Model.info.Lname">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Phone Number</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Pn" value="@Model.info.PhoneNumber">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Birthday</label>
		<div class="col-sm-6">
			<input type="date" class="form-control" name="Bday" value="@Model.info.Bday">
		</div>
	</div>
	@if (Model.successMsg.Length > 0)
	{
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<strong>@Model.successMsg</strong>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			</div>
		</div>
	}

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Create Account</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/Index" role="button">Cancel</a>
		</div>
	</div>
</form>