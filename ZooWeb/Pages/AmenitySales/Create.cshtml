@page
@model ZooWeb.Pages.AmenitySales.CreateModel
@{
}

<br>
<h2>New Amenity Sale</h2>

@if (Model.errorMsg.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMsg</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<form method="POST">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Employee ID</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="EID" value="@Model.info.EID">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Location ID</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Location_ID" value="@Model.info.LocationID">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Sale Type</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Sale_type" value="@Model.info.SaleType">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Sale Date</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Sale_date" value="@Model.info.SaleDate">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Total</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Total" value="@Model.info.Total">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Receipt Number</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Receipt_number" value="@Model.info.ReceiptNumber">
	</div>
	</div>

	@if (Model.successMsg.Length > 0)
	{
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<strong>@Model.successMsg</strong>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			</div>
		</div>
	}

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
		</div>
	</div>
</form>